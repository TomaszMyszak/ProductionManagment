@model IEnumerable<ProductionManagment.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Product</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="card shadow mb-4">

    <div class="card-header py-3">
        <h1 class="m-0 font-weight-bold text-primary">Technical Card</h1>
    </div>
    <div class="card-body">
        <div class="chart-area">
            Below are the information for make technical card. In the modules, you must remember to include the cost of delivery,
            and don't forget the description. Try not to translate information from catalog cards. Our products are made of parts
            bought on the US and EU markets, therefore some descriptions may appear in English or Polish.
        </div>
        <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modules)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th></th>
        </tr>
        </thead>
    </div>
</div>

    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modules)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    
    </tbody>
</table>
